#!/command/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: Network UPS Tools
# Run upsd
# ==============================================================================
if ! bashio::config.equals 'mode' 'netserver' ;then
    exec sleep 864000
fi

bashio::log.info "Starting the UPS information server..."
if bashio::info; then
    exec upsd -D -u root
else
    exec upsd -F -u root
fi
